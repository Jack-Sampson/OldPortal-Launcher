<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- TODO: [LAUNCH-092] Phase 1 Week 1 - Light Theme Resource Dictionary -->
    <!-- Component: Launcher -->
    <!-- Module: UI Redesign - Design System -->
    <!-- Description: Light theme color palette (Phase 5 implementation) -->
    <!-- Status: English-only; light theme deferred to Phase 5 -->

    <!-- ============================================================ -->
    <!-- PRIMARY COLORS (Same as Dark Theme) -->
    <!-- ============================================================ -->

    <Color x:Key="PortalBlue">#2897FF</Color>
    <Color x:Key="TwilightPurple">#6366F1</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PortalBlue}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource TwilightPurple}" />

    <!-- ============================================================ -->
    <!-- STATUS COLORS (Same as Dark Theme) -->
    <!-- ============================================================ -->

    <Color x:Key="StatusOnline">#10B981</Color>
    <Color x:Key="StatusOffline">#6B7280</Color>
    <Color x:Key="StatusWarning">#F59E0B</Color>
    <Color x:Key="StatusError">#EF4444</Color>

    <SolidColorBrush x:Key="StatusOnlineBrush" Color="{StaticResource StatusOnline}" />
    <SolidColorBrush x:Key="StatusOfflineBrush" Color="{StaticResource StatusOffline}" />
    <SolidColorBrush x:Key="StatusWarningBrush" Color="{StaticResource StatusWarning}" />
    <SolidColorBrush x:Key="StatusErrorBrush" Color="{StaticResource StatusError}" />

    <!-- ============================================================ -->
    <!-- BACKGROUND COLORS (LIGHT THEME) -->
    <!-- ============================================================ -->

    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F5F5F7</Color>
    <Color x:Key="BackgroundTertiary">#E8E8ED</Color>
    <Color x:Key="BackgroundHover">#DCDCE0</Color>

    <SolidColorBrush x:Key="BackgroundPrimaryBrush" Color="{StaticResource BackgroundPrimary}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondary}" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiary}" />
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="{StaticResource BackgroundHover}" />

    <!-- ============================================================ -->
    <!-- TEXT COLORS (LIGHT THEME) -->
    <!-- ============================================================ -->

    <Color x:Key="TextPrimary">#0D0D10</Color>
    <Color x:Key="TextSecondary">#1A1A1E</Color>
    <Color x:Key="TextMuted">#6B7280</Color>
    <Color x:Key="TextDisabled">#A0A0A0</Color>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource TextDisabled}" />

    <!-- ============================================================ -->
    <!-- BORDER COLORS (LIGHT THEME) -->
    <!-- ============================================================ -->

    <Color x:Key="BorderPrimary">#E8E8ED</Color>
    <Color x:Key="BorderSecondary">#DCDCE0</Color>
    <Color x:Key="BorderAccent">#2897FF</Color>

    <SolidColorBrush x:Key="BorderPrimaryBrush" Color="{StaticResource BorderPrimary}" />
    <SolidColorBrush x:Key="BorderSecondaryBrush" Color="{StaticResource BorderSecondary}" />
    <SolidColorBrush x:Key="BorderAccentBrush" Color="{StaticResource BorderAccent}" />

    <!-- ============================================================ -->
    <!-- ACCENT COLORS (Same as Dark Theme) -->
    <!-- ============================================================ -->

    <Color x:Key="AccentBlue">#2897FF</Color>
    <Color x:Key="AccentPurple">#6366F1</Color>
    <Color x:Key="AccentGreen">#10B981</Color>
    <Color x:Key="AccentAmber">#F59E0B</Color>
    <Color x:Key="AccentRed">#EF4444</Color>
    <Color x:Key="DangerRed">#DC143C</Color>
    <Color x:Key="SponsorGold">#FFD700</Color>

    <SolidColorBrush x:Key="AccentBlueBrush" Color="{StaticResource AccentBlue}" />
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}" />
    <SolidColorBrush x:Key="AccentGreenBrush" Color="{StaticResource AccentGreen}" />
    <SolidColorBrush x:Key="AccentAmberBrush" Color="{StaticResource AccentAmber}" />
    <SolidColorBrush x:Key="AccentRedBrush" Color="{StaticResource AccentRed}" />
    <SolidColorBrush x:Key="DangerRedBrush" Color="{StaticResource DangerRed}" />
    <SolidColorBrush x:Key="SponsorGoldBrush" Color="{StaticResource SponsorGold}" />

    <!-- ============================================================ -->
    <!-- SHADOW COLORS -->
    <!-- ============================================================ -->

    <Color x:Key="ShadowLight">#0D000000</Color>
    <Color x:Key="ShadowMedium">#1A000000</Color>
    <Color x:Key="ShadowHeavy">#26000000</Color>

    <!-- ============================================================ -->
    <!-- TYPOGRAPHY (Same as Dark Theme) -->
    <!-- ============================================================ -->

    <!-- Font Families -->
    <FontFamily x:Key="FontHeading">Cinzel</FontFamily>
    <FontFamily x:Key="FontBody">Inter</FontFamily>
    <FontFamily x:Key="FontCode">JetBrains Mono</FontFamily>

    <!-- Font Sizes -->
    <x:Double x:Key="FontSizeH1">32</x:Double>
    <x:Double x:Key="FontSizeH2">24</x:Double>
    <x:Double x:Key="FontSizeH3">20</x:Double>
    <x:Double x:Key="FontSizeH4">18</x:Double>
    <x:Double x:Key="FontSizeBody">14</x:Double>
    <x:Double x:Key="FontSizeSmall">12</x:Double>
    <x:Double x:Key="FontSizeTiny">10</x:Double>

    <!-- Font Weights -->
    <FontWeight x:Key="FontWeightBold">Bold</FontWeight>
    <FontWeight x:Key="FontWeightSemiBold">SemiBold</FontWeight>
    <FontWeight x:Key="FontWeightMedium">Medium</FontWeight>
    <FontWeight x:Key="FontWeightNormal">Normal</FontWeight>

    <!-- ============================================================ -->
    <!-- SPACING (Same as Dark Theme) -->
    <!-- ============================================================ -->

    <!-- Spacing as doubles (for Width, Height, FontSize, etc.) -->
    <x:Double x:Key="SpacingXS">4</x:Double>
    <x:Double x:Key="SpacingSM">8</x:Double>
    <x:Double x:Key="SpacingMD">16</x:Double>
    <x:Double x:Key="SpacingLG">24</x:Double>
    <x:Double x:Key="SpacingXL">32</x:Double>
    <x:Double x:Key="Spacing2XL">48</x:Double>
    <x:Double x:Key="Spacing3XL">64</x:Double>

    <!-- Spacing as Thickness (for Margin, Padding, etc.) -->
    <Thickness x:Key="ThicknessXS">4</Thickness>
    <Thickness x:Key="ThicknessSM">8</Thickness>
    <Thickness x:Key="ThicknessMD">16</Thickness>
    <Thickness x:Key="ThicknessLG">24</Thickness>
    <Thickness x:Key="ThicknessXL">32</Thickness>
    <Thickness x:Key="Thickness2XL">48</Thickness>
    <Thickness x:Key="Thickness3XL">64</Thickness>

    <!-- ============================================================ -->
    <!-- CORNER RADIUS (Same as Dark Theme) -->
    <!-- ============================================================ -->

    <CornerRadius x:Key="RadiusSM">4</CornerRadius>
    <CornerRadius x:Key="RadiusMD">8</CornerRadius>
    <CornerRadius x:Key="RadiusLG">12</CornerRadius>
    <CornerRadius x:Key="RadiusXL">16</CornerRadius>
    <CornerRadius x:Key="RadiusFull">9999</CornerRadius>

    <!-- ============================================================ -->
    <!-- ANIMATIONS (Same as Dark Theme) -->
    <!-- ============================================================ -->

    <x:Double x:Key="AnimationDurationFast">0.15</x:Double>
    <x:Double x:Key="AnimationDurationNormal">0.3</x:Double>
    <x:Double x:Key="AnimationDurationSlow">0.5</x:Double>

</ResourceDictionary>

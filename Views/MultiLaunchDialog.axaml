<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:OPLauncher.ViewModels"
        mc:Ignorable="d" d:DesignWidth="650" d:DesignHeight="600"
        x:Class="OPLauncher.Views.MultiLaunchDialog"
        x:DataType="vm:MultiLaunchDialogViewModel"
        Width="650" Height="600"
        MinWidth="500" MinHeight="400"
        CanResize="True"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource SystemAltHighColor}"
        Title="{Binding WorldName, StringFormat='Multi-Client Launch - {0}'}">

    <Design.DataContext>
        <vm:MultiLaunchDialogViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{DynamicResource SystemAltMediumColor}"
                BorderBrush="{DynamicResource SystemAccentColor}"
                BorderThickness="0,0,0,1"
                Padding="24,20">
            <Grid RowDefinitions="Auto,Auto">
                <!-- World Name and Help Button -->
                <Grid Grid.Row="0"
                      ColumnDefinitions="*,Auto"
                      Margin="0,0,0,12">
                    <TextBlock Grid.Column="0"
                               Text="{Binding WorldName}"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource HighlightYellow}"/>
                    <Button Grid.Column="1"
                            Content="â“ Help"
                            Command="{Binding OpenMultiClientHelpCommand}"
                            ToolTip.Tip="Open multi-client help documentation"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="14"
                            Foreground="{DynamicResource SystemAccentColor}"/>
                </Grid>

                <!-- Control Buttons -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            Spacing="12">
                    <Button Content="Select All"
                            Command="{Binding SelectAllCommand}"
                            IsEnabled="{Binding !IsLaunching}"
                            Padding="12,8"
                            FontSize="13"
                            Background="Transparent"
                            Foreground="{DynamicResource SystemBaseHighColor}"
                            BorderBrush="{DynamicResource SystemAccentColor}"
                            BorderThickness="1"
                            CornerRadius="4"/>

                    <Button Content="Select None"
                            Command="{Binding SelectNoneCommand}"
                            IsEnabled="{Binding !IsLaunching}"
                            Padding="12,8"
                            FontSize="13"
                            Background="Transparent"
                            Foreground="{DynamicResource SystemBaseHighColor}"
                            BorderBrush="{DynamicResource SystemAccentColor}"
                            BorderThickness="1"
                            CornerRadius="4"/>

                    <CheckBox Content="Launch Sequentially (with delays)"
                              IsChecked="{Binding LaunchSequentially}"
                              IsEnabled="{Binding !IsLaunching}"
                              Foreground="{DynamicResource SystemBaseHighColor}"
                              FontSize="13"
                              Margin="12,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content - Credentials List -->
        <Border Grid.Row="1"
                Background="{DynamicResource SystemAltHighColor}"
                Padding="24,16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Entries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="vm:LaunchEntryViewModel">
                            <Border Background="{DynamicResource SystemAltMediumColor}"
                                    BorderBrush="{DynamicResource SystemAccentColor}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="16,12"
                                    Margin="0,0,0,12">
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">
                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0"
                                              IsChecked="{Binding IsSelected}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,16,0"/>

                                    <!-- Account Name -->
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource SystemBaseHighColor}"/>
                                        <TextBlock Text="{Binding Credential.Username}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SystemBaseMediumColor}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Move Up/Down Buttons -->
                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal"
                                                Spacing="4"
                                                VerticalAlignment="Center"
                                                Margin="12,0">
                                        <Button Content="â†‘"
                                                Command="{Binding $parent[Window].DataContext.MoveUpCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Move Up"
                                                Width="32"
                                                Height="32"
                                                FontSize="16"
                                                Padding="0"
                                                Background="Transparent"
                                                BorderBrush="{DynamicResource SystemAccentColor}"
                                                BorderThickness="1"
                                                CornerRadius="4"/>
                                        <Button Content="â†“"
                                                Command="{Binding $parent[Window].DataContext.MoveDownCommand}"
                                                CommandParameter="{Binding}"
                                                ToolTip.Tip="Move Down"
                                                Width="32"
                                                Height="32"
                                                FontSize="16"
                                                Padding="0"
                                                Background="Transparent"
                                                BorderBrush="{DynamicResource SystemAccentColor}"
                                                BorderThickness="1"
                                                CornerRadius="4"/>
                                    </StackPanel>

                                    <!-- Order Display -->
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding Order, StringFormat='#{0}'}"
                                               FontSize="13"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource SystemBaseMediumColor}"
                                               VerticalAlignment="Center"
                                               Margin="8,0,12,0"/>

                                    <!-- Delay Selector -->
                                    <StackPanel Grid.Column="4"
                                                Orientation="Horizontal"
                                                Spacing="8"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="Delay:"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource SystemBaseMediumColor}"
                                                   VerticalAlignment="Center"/>
                                        <ComboBox SelectedItem="{Binding DelaySeconds}"
                                                  MinWidth="90"
                                                  FontSize="12"
                                                  Padding="8,6"
                                                  Background="{DynamicResource SystemAltHighColor}"
                                                  Foreground="{DynamicResource SystemBaseHighColor}"
                                                  BorderBrush="{DynamicResource SystemAccentColor}"
                                                  BorderThickness="1"
                                                  CornerRadius="4">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding StringFormat='{}{0} sec'}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                            <x:Int32>0</x:Int32>
                                            <x:Int32>1</x:Int32>
                                            <x:Int32>2</x:Int32>
                                            <x:Int32>3</x:Int32>
                                            <x:Int32>5</x:Int32>
                                            <x:Int32>10</x:Int32>
                                            <x:Int32>15</x:Int32>
                                            <x:Int32>30</x:Int32>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer Section -->
        <Border Grid.Row="2"
                Background="{DynamicResource SystemAltMediumColor}"
                BorderBrush="{DynamicResource SystemAccentColor}"
                BorderThickness="0,1,0,0"
                Padding="24,16">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                <!-- Progress Bar -->
                <ProgressBar Grid.Row="0"
                             Value="{Binding ProgressPercentage}"
                             Minimum="0"
                             Maximum="100"
                             Height="6"
                             Margin="0,0,0,12"
                             IsVisible="{Binding IsLaunching}"
                             Foreground="{DynamicResource SystemAccentColor}"/>

                <!-- Status Message -->
                <TextBlock Grid.Row="1"
                           Text="{Binding StatusMessage}"
                           FontSize="13"
                           Foreground="{DynamicResource SystemBaseHighColor}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,8"
                           IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                <!-- Result Message -->
                <TextBlock Grid.Row="2"
                           Text="{Binding ResultMessage}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource SuccessGreen}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"
                           IsVisible="{Binding ResultMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                <!-- Action Buttons -->
                <Grid Grid.Row="3"
                      ColumnDefinitions="*,Auto,Auto">
                    <!-- Launch Count Info -->
                    <TextBlock Grid.Column="0"
                               FontSize="13"
                               Foreground="{DynamicResource SystemBaseMediumColor}"
                               VerticalAlignment="Center">
                        <Run Text="{Binding TotalSelected, Mode=OneWay}"/>
                        <Run Text="client(s) selected"/>
                    </TextBlock>

                    <!-- Cancel Button -->
                    <Button Grid.Column="1"
                            Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Padding="20,10"
                            FontSize="14"
                            Margin="0,0,12,0"
                            Background="Transparent"
                            Foreground="{DynamicResource SystemBaseHighColor}"
                            BorderBrush="{DynamicResource SystemAccentColor}"
                            BorderThickness="1"
                            CornerRadius="6"/>

                    <!-- Launch Button -->
                    <Button Grid.Column="2"
                            Command="{Binding LaunchSelectedCommand}"
                            Padding="24,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Background="{DynamicResource SystemAccentColorDark1}"
                            Foreground="{DynamicResource SystemBaseHighColor}"
                            BorderThickness="0"
                            CornerRadius="6">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="ðŸš€" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock VerticalAlignment="Center">
                                <Run Text="Launch"/>
                                <Run Text="{Binding TotalSelected, Mode=OneWay}"/>
                                <Run Text="Client(s)"/>
                            </TextBlock>
                        </StackPanel>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#4361EE"/>
                            </Style>
                            <Style Selector="Button:pressed">
                                <Setter Property="Background" Value="#240046"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>

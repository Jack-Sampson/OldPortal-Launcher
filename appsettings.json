{
  "ApiSettings": {
    "ApiBaseUrl": "https://oldportal.com/api/v1",
    "UpdateManifestUrl": "/api/v1/launcher/version",
    "TimeoutSeconds": 30
  },
  "Logging": {
    "MinimumLevel": "Information",
    "LogFilePath": "%LOCALAPPDATA%\\OldPortal\\launcher\\logs\\launcher-.log",
    "RetainedFileCountLimit": 30
  },
  "Cache": {
    "DatabasePath": "%LOCALAPPDATA%\\OldPortal\\launcher\\cache.db",
    "WorldsCacheExpirationMinutes": 5
  },
  "Security": {
    "UseDpapiEncryption": true,
    "TokenRefreshThresholdMinutes": 5
  },
  "Preferences": {
    "DefaultTheme": "System",
    "CheckForUpdatesOnStartup": true,
    "RememberLastCredential": true
  }
}
